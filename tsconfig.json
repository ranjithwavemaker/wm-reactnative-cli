{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "allowJs": true,
    // "checkJs": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "index.ts",
    "templates/**/*",
    "package.json"
  ],
  "exclude": ["node_modules", "dist"]
} 